{
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    //"noImplicitReturns": true,
    //"noImplicitThis": true,
    "resolveJsonModule": true,
    // "sourceMap": true,
    "strict": true,
    //"strictFunctionTypes": true,
    "strictNullChecks": true,
    //"strictPropertyInitialization": true,
    "target": "ES2018"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}